{% extends 'base.html.twig' %}

{% block title %}Nouveau diagramme de budget{% endblock %}

{% block body %}
    <h1>Nouveau diagramme de budget</h1>

    <canvas id="myChart" width="800" height="400"></canvas>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var ctx = document.getElementById('myChart').getContext('2d');

            // Utiliser les nouvelles données pour construire le diagramme
            var newBudget = {{ newBudget }};
            var newCategoryDailyBudget = {{ newCategoryDailyBudget }};

            // Construire le diagramme avec les nouvelles données
            var myChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['Catégorie 1', 'Catégorie 2', 'Catégorie 3', 'Catégorie 4', 'Catégorie 5'],
                    datasets: [{
                        label: 'Budget quotidien par catégorie',
                        data: [newCategoryDailyBudget, newCategoryDailyBudget, newCategoryDailyBudget, newCategoryDailyBudget, newCategoryDailyBudget],
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.6)',
                            'rgba(54, 162, 235, 0.6)',
                            'rgba(255, 206, 86, 0.6)',
                            'rgba(75, 192, 192, 0.6)',
                            'rgba(153, 102, 255, 0.6)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        yAxes: [{
                            ticks: {
                                beginAtZero: true
                            }
                        }]
                    }
                }
            });
        });
    </script>
{% endblock %}
